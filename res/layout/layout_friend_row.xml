<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:weightSum="720" >

        <FrameLayout
            android:id="@+id/friendPhoto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="170" >
            
            <Button
                android:id="@+id/buttonDishBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:text="@string/detail_kr" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/friendName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="250"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textName"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/friendScript"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="300"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textScript"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center_vertical|right" />

            <ImageView
                android:id="@+id/imageRegistered"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:clickable="false"
                android:scaleType="centerInside"
                android:src="@drawable/light"
                android:visibility="invisible" />
            
        </LinearLayout>
    </LinearLayout>

</LinearLayout>